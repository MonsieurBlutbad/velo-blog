{% extends 'base.html.twig' %}

{% block bodyClass %}
    {% spaceless %}
        subpage-layout
    {% endspaceless %}
{% endblock %}

{% block bodyWrapper %}
    <header>
        <div class="container-fluid" style="{% block headerImage %}{% endblock %}">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="title-wrapper">
                            {% block header %}
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="content">
                    {% block content %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
