{% extends 'base.html.twig' %}

{% block title %}{{ tour.title }}{% endblock %}

{% block bodyWrapper %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>
                    {{ tour.title }}
                </h1>
            </div>
        </div>
    </div>

    <div class="container-fluid no-gutter">
        {% if tour.activePosts | length > 0 %}
            <div class="full-width-list post-list">
                {% for post in tour.activePosts %}
                    <a class="list-item" href="{{ path('post_show', {id: post.id}) }}" style="background-image: url({{ vich_uploader_asset(post, 'headerImageFile') }})">
                        <div class="overlay"></div>
                        <div class="meta">
                            <h2 class="title">{{ post.title }}</h2>
                            <span class="date">{{ post.date | date ('d.m.Y') }}</span>
                        </div>
                    </a>
                {% endfor %}
            </div>
        {% else %}
            <div class="list-item alert alert-danger">
                Keine Eintr√§ge gefunden.
            </div>
        {% endif %}
    </div>
{% endblock %}